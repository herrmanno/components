{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "../js",
        "declaration": true,
        "noEmitOnError": false,
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./components/attribute.ts",
        "./components/component.ts",
        "./components/components.ts",
        "./components/htmlprovider/htmlprovider.ts",
        "./components/registry/registry.ts",
        "./components/renderer/renderer.ts",
        "./components/styler/styler.ts",
        "./components/temp/temp.ts"
    ]
}
